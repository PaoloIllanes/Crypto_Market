<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/coinlogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="230dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic">

        </ImageView>

        <TextView
            android:id="@+id/coinname"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="Welcome User"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/coinshort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/coinlogo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coinshort"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="100dp"
            android:gravity="left"
            android:text="Make Your First Investment"
            android:textColor="#2E2E2E"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toEndOf="@+id/coinlogo"
            app:layout_constraintTop_toBottomOf="@+id/coinname" />

        <TextView
            android:id="@+id/coinval"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:text="value"
            android:textColor="#2E2E2E"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/coinshort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coinname"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center">

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>


